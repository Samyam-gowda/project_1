<body>
    <section>
        <div class="navbar">
            <div class="nav_element">
                <div>&nbsp;&nbsp;&nbsp;
                    <span class="material-symbols-outlined home_icon">
                    home
                    </span>
                </div>
                    <div>
                        HOME
                    </div>
            </div>
            <div class="nav_element">e_commerce</div>
            <div class="nav_element">
                <div>
                    <span class="material-symbols-outlined account">
                        account_circle
                    </span>
                </div>
                <div>
                    <%=globalName%>&nbsp;&nbsp;&nbsp;
                </div>
        </div>
        </div>
    </section>
    <section class="welcome">
        <div class="login">
            <form action="/home/login" method="get">
                <button type="submit"> LOGIN </button>
            </form>
        </div>
        <div class="register">
            <form action="/home/register" method="get">
                <button type="submit"> REGISTER </button>
            </form>
        </div>
    </section>
    <section class="main">
        <div>
            <div><br>
                <img src="image//temp.jpeg" alt="">
            </div>
            <div class="buttons">
                <div class="btn">
                    <form action="/home/addprod" method="get">
                        <button class="use_btn"><i class="fa-sharp fa-regular fa-square-plus"></i></button>
                    </form>
                </div>
                <div class="btn">
                    <form action="/home/buyprod" method="get">
                        <button class="use_btn"><i class="fa-sharp fa-regular fa-square-plus"></i></button>
                    </form>
                </div>
            </div>
            <div class="buttons">
                <div class="text">  <b> ADD PROD </b></div>
                <div class="text">  <b> BUY PROD </b></div>
            </div>
        </div>
           
    </section>
